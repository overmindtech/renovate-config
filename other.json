{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "AWS RDS Aurora PostgreSQL Serverless",
      "groupSlug": "rds-aurora-docker",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "postgres"
      ],
      "allowedVersions": "/^14\\.9-alpine$/"
    },
    {
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "Docker Images",
      "groupSlug": "docker",
      "matchDatasources": [
        "docker"
      ]
    },
    {
      "groupName": "Go",
      "groupSlug": "go",
      "matchDatasources": [
        "go",
        "golang-version"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/"
    },
    {
      "groupName": "Helm Charts",
      "groupSlug": "helm",
      "matchDatasources": [
        "helm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/"
    },
    {
      "groupName": "Javascript",
      "groupSlug": "js",
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/"
    },
    {
      "groupName": "Terraform",
      "groupSlug": "terraform",
      "matchDatasources": [
        "terraform-module",
        "terraform-provider"
      ]
    }
  ]
}