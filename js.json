{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Overmind Dependencies",
      "groupSlug": "overmindtech-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@overmindtech/"
      ]
    },
    {
      "groupName": "Linters and Formatters",
      "groupSlug": "prettier-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "prettier",
        "eslint",
        "@typescript-eslint/"
      ],
      "automerge": true
    },
    {
      "groupName": "Test Tooling",
      "groupSlug": "jest-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "jest",
        "@testing-library/",
        "@playwright/",
        "next-router-mock",
        "lost-pixel",
        "@ladle/react"
      ],
      "automerge": true
    },
    {
      "groupName": "RPC Libraries",
      "groupSlug": "trpc-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@bufbuild/",
        "@grpc/grpc-js",
        "@trpc/",
        "msw-trpc",
        "tanstack-query"
      ]
    },
    {
      "groupName": "Observability Tooling",
      "groupSlug": "observability-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@opentelemetry/",
        "@sentry/"
      ]
    },
    {
      "groupName": "Radix UI",
      "groupSlug": "radix-ui",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@radix-ui/"
      ]
    },
    {
      "groupName": "TypeScript types",
      "groupSlug": "ts-types",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@types/"
      ]
    }
  ]
}