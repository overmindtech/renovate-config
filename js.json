{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "groupName": "Overmind Dependencies",
            "groupSlug": "overmindtech-npm",
            "matchDatasources": [
                "npm"
            ],
            "matchPackagePrefixes": [
                "@overmindtech/"
            ]
        },
        {
            "groupName": "Linters and Formatters",
            "groupSlug": "prettier-npm",
            "matchDatasources": [
                "npm"
            ],
            "matchPackagePrefixes": [
                "prettier",
                "eslint",
                "@typescript-eslint/"
            ]
        },
        {
            "groupName": "Test Tooling",
            "groupSlug": "jest-npm",
            "matchDatasources": [
                "npm"
            ],
            "matchPackagePrefixes": [
                "jest",
                "@testing-library/",
                "@playwright/"
            ]
        },
        {
            "groupName": "tRPC",
            "groupSlug": "trpc-npm",
            "matchDatasources": [
                "npm"
            ],
            "matchPackagePrefixes": [
                "@trpc/",
                "msw-trpc"
            ]
        }
    ]
}