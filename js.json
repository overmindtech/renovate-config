{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDatasources": [
        "npm"
      ],
      "labels": [
        "dependencies",
        "javascript"
      ]
    },
    {
      "groupName": "Overmind Dependencies",
      "groupSlug": "overmindtech-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@overmindtech/"
      ]
    },
    {
      "groupName": "Linters and Formatters",
      "groupSlug": "prettier-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "prettier",
        "eslint",
        "@typescript-eslint/"
      ],
      "automerge": true
    },
    {
      "groupName": "Test Tooling",
      "groupSlug": "jest-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "jest",
        "@testing-library/",
        "@playwright/",
        "next-router-mock",
        "lost-pixel",
        "@ladle/react"
      ],
      "automerge": true
    },
    {
      "groupName": "tRPC Libraries",
      "groupSlug": "trpc-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@trpc/",
        "msw-trpc"
      ]
    },
    {
      "groupName": "bufbuild Libraries",
      "groupSlug": "bufbuild-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@bufbuild/",
        "@grpc/grpc-js",
        "tanstack-query"
      ]
    },
    {
      "groupName": "Observability Tooling",
      "groupSlug": "observability-npm",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@opentelemetry/",
        "@sentry/"
      ]
    },
    {
      "groupName": "Radix UI",
      "groupSlug": "radix-ui",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@radix-ui/"
      ]
    },
    {
      "groupName": "Vite",
      "groupSlug": "vite",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@vitejs/",
        "vite"
      ]
    },
    {
      "groupName": "TypeScript types",
      "groupSlug": "ts-types",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePrefixes": [
        "@types/"
      ]
    }
  ]
}